{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "todo.txt@xseth.nl",
      "strict_min_version": "78.2.0"
    }
  },
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "2.0.1",
  "icons": {
    "32": "skin/icon32.png"
  },

  "default_locale": "en",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage"
  ],

  "experiment_apis": {
    "todo": {
      "schema": "api/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api/todo.js",
        "events": ["startup"],
        "paths": [
          ["todo"]
        ]
      }
    }
  }
}
